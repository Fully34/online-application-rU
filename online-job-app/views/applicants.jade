extends layout

block content
    .container
        h1 Applicants

        ul#applications.list-unstyled

        for applicant in applicants

            form(method='POST' action='/delete-applicant/#{applicant._id}')
                input(type='submit' value='delete')
            li 
                a(href='/applicant/#{applicant._id}') Name: #{applicant.name}
            li Bio: #{applicant.bio}
            li Skills: #{applicant.skills}
            li Years of experience: #{applicant.years}
            li Personal Statement: #{applicant.why}
            hr

        a(href='/') HOME